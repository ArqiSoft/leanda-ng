{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://leanda.io/schemas/Record.json",
  "title": "Record",
  "description": "Record entity representing a data record within a file (e.g., chemical compound, crystal structure). Extracted from Sds.Osdr.RecordsFile.Domain",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique record identifier"
    },
    "fileId": {
      "type": "string",
      "format": "uuid",
      "description": "Parent file ID"
    },
    "ownedBy": {
      "type": "string",
      "format": "uuid",
      "description": "User ID who owns this record"
    },
    "createdBy": {
      "type": "string",
      "format": "uuid",
      "description": "User ID who created this record"
    },
    "createdDateTime": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedBy": {
      "type": "string",
      "format": "uuid",
      "description": "User ID who last updated this record"
    },
    "updatedDateTime": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "bucket": {
      "type": "string",
      "description": "Blob storage bucket"
    },
    "blobId": {
      "type": "string",
      "format": "uuid",
      "description": "Blob ID for record data"
    },
    "index": {
      "type": "integer",
      "minimum": 0,
      "description": "Record index within the file"
    },
    "type": {
      "type": "string",
      "enum": ["Chemical", "Crystal", "Reaction", "Spectrum"],
      "description": "Record type"
    },
    "subType": {
      "type": "string",
      "description": "Record subtype"
    },
    "status": {
      "type": "string",
      "enum": ["Created", "Processing", "Processed", "Failed"],
      "description": "Processing status"
    },
    "images": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Image"
      },
      "description": "Generated preview images"
    },
    "properties": {
      "$ref": "#/$defs/Properties",
      "description": "Parsed properties and fields"
    },
    "issues": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Issue"
      },
      "description": "Processing issues/warnings"
    },
    "accessPermissions": {
      "$ref": "#/$defs/AccessPermissions",
      "description": "Access control settings"
    },
    "version": {
      "type": "integer",
      "minimum": 0,
      "description": "Aggregate version"
    }
  },
  "$defs": {
    "Image": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "bucket": {
          "type": "string"
        },
        "height": {
          "type": "integer"
        },
        "width": {
          "type": "integer"
        },
        "mimeType": {
          "type": "string"
        },
        "scale": {
          "type": "string"
        }
      }
    },
    "Properties": {
      "type": "object",
      "properties": {
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Field"
          }
        },
        "chemicalProperties": {
          "type": "object",
          "description": "Chemical-specific properties (MW, formula, etc.)"
        }
      }
    },
    "Field": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {}
      }
    },
    "Issue": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "severity": {
          "type": "string",
          "enum": ["Information", "Warning", "Error"]
        }
      }
    },
    "AccessPermissions": {
      "type": "object",
      "properties": {
        "isPublic": {
          "type": ["boolean", "null"]
        },
        "users": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        "groups": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        }
      }
    }
  },
  "required": ["id", "fileId", "ownedBy", "index", "type"],
  "additionalProperties": false,
  "x-mongodb-collection": "Records",
  "x-mongodb-indexes": [
    {
      "name": "idx_record_fileId",
      "fields": { "fileId": 1 }
    },
    {
      "name": "idx_record_fileId_index",
      "fields": { "fileId": 1, "index": 1 },
      "unique": true
    },
    {
      "name": "idx_record_ownedBy",
      "fields": { "ownedBy": 1 }
    },
    {
      "name": "idx_record_type",
      "fields": { "type": 1 }
    }
  ]
}

